{
  "compilerOptions": {
    "project": "./tsconfig.json",
    "isolatedModules": true,
    "declaration": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "esModuleInterop": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "jsx": "react",
  },
  "include": ["./src/**/*"],
}
